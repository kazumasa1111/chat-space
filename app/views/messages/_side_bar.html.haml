.side-bar
  .side-bar__user-name
    .side-box
      .side-box__name
        %p= current_user.name
      .side-box__icons
        = link_to new_group_path do
          = icon('fas', 'edit', class: "side-box__icons side-box__icons--icon")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "side-box__icons side-box__icons--icon")
      
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-groupbox
        = link_to group_messages_path(group) do
          .side-groupbox__title
            = group.name
          .side-groupbox__message
            = group.show_last_message
    