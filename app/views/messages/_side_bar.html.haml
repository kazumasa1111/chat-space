.side-bar
  .side-bar__user-name
    .side-box
      .side-box__name
        %p= current_user.name
      .side-box__icons
        = link_to do
          = icon('fas', 'edit', class: "side-box__icons side-box__icons--icon")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "side-box__icons side-box__icons--icon")
      
  .side-bar__group-list
    .side-groupbox
      .side-groupbox__title
        %p title
      .side-groupbox__message
        %p message
    